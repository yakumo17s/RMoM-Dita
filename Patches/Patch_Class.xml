<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>*/TorannMagic.TM_CustomClassDef[defName = "TM_CustomClasses"]/customClasses</xpath>
        <value>
            <!-- Custom Class - the Wayfarer -->
            <li>
                <classTrait>Dita</classTrait>
                <traitDegree>4</traitDegree>
                <classHediff></classHediff>
                <classTexturePath>wayfarerFlame</classTexturePath>
                <classIconPath>CustomFlame</classIconPath>
                <classIconColor>(1,0.09,0.39)</classIconColor>
                <tornScript>Torn_BookOfDita</tornScript>
